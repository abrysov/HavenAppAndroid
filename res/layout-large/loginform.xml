<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    
    >

    <FrameLayout
        android:id="@+id/loginf_fl_customheader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        
        >

        <LinearLayout
            android:id="@+id/loginf_ll_customheader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@drawable/header_red_for_1280_portret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/header_p" android:visibility="gone"/>

            <FrameLayout
                android:id="@+id/loginf_tv_header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#000" android:paddingBottom="10dip" android:paddingTop="10dip" android:visibility="gone">

                <TextView
                    android:id="@+id/loginf_tv_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Haven Amstedam"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

            </FrameLayout>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/loginf_fl_generalf"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:background="#fff" android:padding="30dip">

        <FrameLayout
            android:id="@+id/loginf_fl_itemsf"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="top" android:background="@color/black" android:minWidth="250dip" android:minHeight="300dip" android:layout_marginLeft="70dip" android:layout_marginRight="70dip" android:layout_marginTop="120dip" android:layout_marginBottom="400dip">

            <LinearLayout
                android:id="@+id/loginf_ll_itemsf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" android:layout_gravity="center" android:paddingLeft="40dip" android:paddingRight="40dip" android:paddingBottom="20dip" android:paddingTop="20dip">

                <EditText
                    android:id="@+id/loginf_et_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dip"
                    android:text="@string/holland_loginf_user_name" android:textColor="@color/black" android:maxWidth="250dip" android:layout_marginLeft="20dip" android:layout_marginRight="20dip" android:textSize="26dip">

                    <requestFocus />
                </EditText>

                <EditText
                    android:id="@+id/loginf_et_password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dip"
                    android:text="@string/holland_loginf_password" android:textColor="@color/black" android:maxWidth="250dip" android:inputType="textPassword" android:layout_marginLeft="20dip" android:layout_marginRight="20dip" android:textSize="26dip"/>

                <FrameLayout
                    android:id="@+id/loginf_fl_loginbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dip"
                    android:background="@drawable/bg_button_default" >

                    <TextView
                        android:id="@+id/loginf_tv_loginbutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center"
                        android:text="@string/holland_loginf_login"
                        android:textAppearance="?android:attr/textAppearanceMedium" android:textColor="@color/black" android:textSize="23dip"/>
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

</LinearLayout>